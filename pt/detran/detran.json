{
  "openapi": "3.0.3",
  "info": {
    "title": "API de Inadimplência Veicular",
    "version": "1.2.1",
    "description": "API para registro, consulta e gestão de inadimplência veicular, incluindo autenticação, cancelamento, apreensão e averbação."
  },
  "paths": {
    "/autenticacao": {
      "post": {
        "summary": "Gerar token JWT",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "usuario": {
                    "type": "string",
                    "minLength": 5,
                    "maxLength": 50
                  },
                  "senha": {
                    "type": "string",
                    "minLength": 8,
                    "maxLength": 100
                  }
                },
                "required": ["usuario", "senha"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token JWT gerado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResponse"
                }
              }
            }
          },
          "401": {
            "description": "Acesso inválido",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ErroPadrao"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "statusCode": {
                          "type": "integer",
                          "example": 401
                        },
                        "message": {
                          "type": "string",
                          "example": "Usuário ou senha inválidos."
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/registro": {
      "post": {
        "summary": "Registrar inadimplência",
        "security": [
          {
            "Authorization": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "placa": {
                    "$ref": "#/components/schemas/Placa"
                  },
                  "renavam": {
                    "$ref": "#/components/schemas/Renavam"
                  },
                  "docProprietario": {
                    "$ref": "#/components/schemas/NationalId"
                  },
                  "phoneProprietario": {
                    "$ref": "#/components/schemas/Phone"
                  },
                  "emailProprietario": {
                    "$ref": "#/components/schemas/Email"
                  },
                  "idContrato": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 50,
                    "description": "Identificador do contrato de financiamento ou leasing.",
                    "example": "1234567890"
                  },
                  "docCredor": {
                    "$ref": "#/components/schemas/NationalId"
                  },
                  "dataContrato": {
                    "$ref": "#/components/schemas/DateTime"
                  },
                  "valorDebito": {
                    "type": "number",
                    "description": "Valor total do débito em atraso.",
                    "example": 1500
                  },
                  "valorContrato": {
                    "type": "number",
                    "description": "Valor total do contrato de financiamento ou leasing.",
                    "example": 200000
                  },
                  "parcelasAtraso": {
                    "type": "integer",
                    "description": "Número de parcelas em atraso.",
                    "example": 3
                  },
                  "urlAtendimento": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL para atendimento ao cliente do credor fiduciário.",
                    "example": "https://www.credor.com/atendimento"
                  },
                  "urlPagamento": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL para pagamento do débito.",
                    "example": "https://www.credor.com/pagamento"
                  },
                  "observacoes": {
                    "type": "string",
                    "maxLength": 255
                  },
                  "dataCriacao": {
                    "$ref": "#/components/schemas/DateTime"
                  },
                  "dataAtualizacao": {
                    "$ref": "#/components/schemas/DateTime"
                  }
                },
                "required": [
                  "placa",
                  "renavam",
                  "docProprietario",
                  "idContrato",
                  "docCredor",
                  "dataContrato",
                  "valorDebito",
                  "valorContrato",
                  "parcelasAtraso",
                  "urlAtendimento",
                  "urlPagamento",
                  "observacoes",
                  "dataCriacao",
                  "dataAtualizacao"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cadastro de inadimplência criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "idRegistro": {
                      "$ref": "#/components/schemas/UUID"
                    },
                    "dataCriacao": {
                      "$ref": "#/components/schemas/DateTime"
                    },
                    "status": {
                      "$ref": "#/components/schemas/RegistroStatus",
                      "example": "ATIVO"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error400"
                }
              }
            }
          },
          "404": {
            "description": "Renavam inexistente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error404"
                }
              }
            }
          },
          "401": {
            "description": "Acesso Inválido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error401"
                }
              }
            }
          }
        },
        "description": "- O contrato deve estar inadimplente, com parcelas em atraso.\n- O credor fiduciário deve fornecer URLs para pagamento e negociação.\n- Verificar validade de Placa + Renavam + Doc Proprietário e inexistência de registro ativo/finalizado.\n- Verificar vínculo do docCredor à alienação fiduciária do veículo.\n- Notificar o proprietário por todos os canais conhecidos.\n- Registrar restrição de circulação do veículo."
      }
    },
    "/registro/{renavam}": {
      "get": {
        "summary": "Consultar registro de inadimplência",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "renavam",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Renavam"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Registro encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistroCompleto"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error400"
                }
              }
            }
          },
          "404": {
            "description": "Renavam inexistente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error404"
                }
              }
            }
          },
          "401": {
            "description": "Acesso Inválido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error401"
                }
              }
            }
          }
        },
        "description": "- Retorna todos os dados do registro de inadimplência vinculado ao Renavam informado."
      },
      "delete": {
        "summary": "Cancelar registro de inadimplência",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "renavam",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Renavam"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "idRegistro": {
                    "$ref": "#/components/schemas/UUID"
                  },
                  "placa": {
                    "$ref": "#/components/schemas/Placa"
                  },
                  "docProprietario": {
                    "$ref": "#/components/schemas/NationalId"
                  },
                  "idContrato": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 50,
                    "description": "Identificador do contrato de financiamento ou leasing.",
                    "example": "1234567890"
                  },
                  "docCredor": {
                    "$ref": "#/components/schemas/NationalId"
                  },
                  "motivoCancelamento": {
                    "type": "string",
                    "maxLength": 255
                  }
                },
                "required": [
                  "idRegistro",
                  "placa",
                  "docProprietario",
                  "idContrato",
                  "docCredor",
                  "motivoCancelamento"
                ]
              }
            }
          },
          "responses": {
            "200": {
              "description": "Registro cancelado",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/RegistroCompleto"
                  }
                }
              }
            },
            "400": {
              "description": "Dados inválidos",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error400"
                  }
                }
              }
            },
            "404": {
              "description": "Renavam inexistente",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error404"
                  }
                }
              }
            },
            "401": {
              "description": "Acesso Inválido",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error401"
                  }
                }
              }
            }
          }
        },
        "description": "- Apenas registros com status `ATIVO`, `APREENSAO` ou `APREENDIDO` podem ser cancelados.\n- O motivo do cancelamento deve conter no máximo 255 caracteres.\n- Verificar vínculo do docCredor e validade dos dados do veículo e proprietário."
      }
    },
    "/apreensao/{idRegistro}": {
      "post": {
        "summary": "Emitir ordem de busca e apreensão",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "idRegistro",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/UUID"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "placa": {
                    "$ref": "#/components/schemas/Placa"
                  },
                  "renavam": {
                    "$ref": "#/components/schemas/Renavam"
                  },
                  "docCredorAgente": {
                    "$ref": "#/components/schemas/NationalId"
                  }
                },
                "required": ["placa", "renavam", "docCredorAgente"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ordem de apreensão emitida",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistroCompleto"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error400"
                }
              }
            }
          },
          "404": {
            "description": "Renavam inexistente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error404"
                }
              }
            }
          },
          "401": {
            "description": "Acesso Inválido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error401"
                }
              }
            }
          }
        },
        "description": "- Apenas registros com status `ATIVO` podem ser apreendidos.\n- Verificar vínculo do docCredor e validade do registro e dados do veículo.\n- Ordem de busca só pode ser emitida após 7 dias do registro de inadimplência.\n- O status do registro será alterado para: `APREENSAO`."
      },
      "put": {
        "summary": "Registrar auto de apreensão",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "idRegistro",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/UUID"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "placa": {
                    "$ref": "#/components/schemas/Placa"
                  },
                  "renavam": {
                    "$ref": "#/components/schemas/Renavam"
                  },
                  "docCredorAgente": {
                    "$ref": "#/components/schemas/NationalId"
                  },
                  "imagensVeiculo": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "uri"
                    },
                    "example": [
                      "https://example.com/imagem1.jpg",
                      "https://example.com/imagem2.jpg"
                    ]
                  },
                  "descricaoApreensao": {
                    "type": "string",
                    "maxLength": 255
                  },
                  "localizacao": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "minItems": 2,
                    "maxItems": 2,
                    "example": [37.7749, -122.4194]
                  },
                  "endereco": {
                    "$ref": "#/components/schemas/Endereco"
                  },
                  "dataApreensao": {
                    "$ref": "#/components/schemas/DateTime"
                  }
                },
                "required": [
                  "placa",
                  "renavam",
                  "docCredorAgente",
                  "imagensVeiculo",
                  "descricaoApreensao",
                  "localizacao",
                  "endereco",
                  "dataApreensao"
                ]
              }
            }
          },
          "responses": {
            "200": {
              "description": "Auto registrado com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/RegistroCompleto"
                  }
                }
              }
            },
            "400": {
              "description": "Dados inválidos",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error400"
                  }
                }
              }
            },
            "404": {
              "description": "Renavam inexistente",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error404"
                  }
                }
              }
            },
            "401": {
              "description": "Acesso Inválido",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Error401"
                  }
                }
              }
            }
          }
        },
        "description": "- Apenas registros com status `APREENSAO` podem ser apreendidos.\n- Verificar vínculo do docCredor e validade dos dados do veículo.\n- O status do registro será alterado para: `APREENDIDO`."
      }
    },
    "/averbacao/{idRegistro}": {
      "post": {
        "summary": "Registrar a averbação do veículo",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "idRegistro",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/UUID"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "placa": {
                    "$ref": "#/components/schemas/Placa"
                  },
                  "renavam": {
                    "$ref": "#/components/schemas/Renavam"
                  },
                  "docProprietario": {
                    "$ref": "#/components/schemas/NationalId"
                  },
                  "idContrato": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 50,
                    "description": "Identificador do contrato de financiamento ou leasing.",
                    "example": "1234567890"
                  },
                  "docCredor": {
                    "$ref": "#/components/schemas/NationalId"
                  }
                },
                "required": ["placa", "renavam", "docProprietario", "idContrato", "docCredor"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Averbação registrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistroCompleto"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error400"
                }
              }
            }
          },
          "404": {
            "description": "Renavam inexistente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error404"
                }
              }
            }
          },
          "401": {
            "description": "Acesso Inválido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error401"
                }
              }
            }
          }
        },
        "description": "- Apenas registros com status `APREENDIDO` podem ser transferidos.\n- Verificar vínculo do docCredor e validade do registro e dados do veículo.\n- Não pode haver dívidas ativas para efetivar a transferência.\n- A transferência só pode ser feita para o docCredor registrado."
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Authorization": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "in": "header",
        "description": "Token JWT para autenticação. O cabeçalho deve ser: `Authorization: Bearer {token}`"
      }
    },
    "schemas": {
      "Error401": {
        "description": "Acesso inválido",
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ErroPadrao"
                },
                {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "example": "Usuário ou senha inválidos."
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "Error404": {
        "description": "Recurso não encontrado",
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ErroPadrao"
                },
                {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "Recurso não encontrado."
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "Error400": {
        "description": "Erro de validação",
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ErroPadrao"
                },
                {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Dados inválidos. Verifique os campos obrigatórios."
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "NationalId": {
        "type": "string",
        "pattern": "^[0-9]{11,14}$",
        "description": "Número do CPF ou CNPJ, dependendo do contexto.",
        "minLength": 11,
        "maxLength": 14,
        "example": "12345678901"
      },
      "Email": {
        "type": "string",
        "format": "email",
        "description": "Formato de e-mail válido.",
        "minLength": 5,
        "maxLength": 100,
        "example": "email@server.com"
      },
      "Phone": {
        "type": "string",
        "pattern": "^\\+[1-9]\\d{1,14}$",
        "description": "Formato de telefone internacional, começando com o código do país.",
        "example": "+5511999999999",
        "minLength": 10,
        "maxLength": 15
      },
      "UUID": {
        "type": "string",
        "format": "uuid",
        "description": "Identificador único universal (UUID) para o registro.",
        "example": "123e4567-e89b-12d3-a456-426614174000"
      },
      "DateTime": {
        "type": "string",
        "format": "date-time",
        "description": "Data e hora no formato ISO 8601 em UTC.",
        "example": "2025-01-01T00:00:00Z"
      },
      "Placa": {
        "type": "string",
        "pattern": "^[A-Z]{3}[0-9][0-9A-Z][0-9]{2}$",
        "description": "Formato da placa do veículo, considerando o padrão Mercosul.",
        "minLength": 7,
        "maxLength": 7,
        "example": "ABC1D23"
      },
      "Renavam": {
        "type": "string",
        "pattern": "^[0-9]{11}$",
        "description": "Número do Renavam do veículo, com 11 dígitos.",
        "minLength": 11,
        "maxLength": 11,
        "example": "12345678901"
      },
      "TokenResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "ErroPadrao": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "RegistroStatus": {
        "type": "string",
        "enum": ["ATIVO", "APREENSAO", "APREENDIDO", "CANCELADO", "TRANSFERIDO"]
      },
      "RegistroBase": {
        "type": "object",
        "properties": {
          "placa": {
            "$ref": "#/components/schemas/Placa"
          },
          "renavam": {
            "$ref": "#/components/schemas/Renavam"
          },
          "docProprietario": {
            "$ref": "#/components/schemas/NationalId"
          },
          "idContrato": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "Identificador do contrato de financiamento ou leasing.",
            "example": "1234567890"
          },
          "docCredor": {
            "$ref": "#/components/schemas/NationalId"
          },
          "dataContrato": {
            "$ref": "#/components/schemas/DateTime"
          },
          "valorDebito": {
            "type": "number",
            "description": "Valor total do débito em atraso.",
            "example": 1500
          },
          "valorContrato": {
            "type": "number",
            "description": "Valor total do contrato de financiamento ou leasing.",
            "example": 200000
          },
          "parcelasAtraso": {
            "type": "integer",
            "description": "Número de parcelas em atraso.",
            "example": 3
          },
          "urlAtendimento": {
            "type": "string",
            "format": "uri",
            "description": "URL para atendimento ao cliente do credor fiduciário.",
            "example": "https://www.credor.com/atendimento"
          },
          "urlPagamento": {
            "type": "string",
            "format": "uri",
            "description": "URL para pagamento do débito.",
