{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "zarvhq/developers",
    "rootDir": "."
  },
  "files": [
    {
      "location": ".vitepress/config/{en,pt,es}.ts",
      "pattern": ".vitepress/config/@lang.ts",
      "type": "universal"
    },
    {
      "location": "**/*.md",
      "pattern": "@lang/@path",
      "type": "universal"
    }
  ],
  "defaultLocale": {
    "label": "English",
    "lang": "en"
  },
  "locales": [
    {
      "label": "Português",
      "lang": "pt"
    },
    {
      "label": "Español",
      "lang": "es"
    }
  ],
  "outDir": "dist/_translations",
  "ignoreKeywords": ["lunaria-ignore"]
}
